@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #e6f2ff; 
        }

        .confirmation-container {
            background-color: #007bff; 
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 400px;
            color: #fff; /* White text color */
        }

        h1 {
            font-size: 28px;
            color: #fff; /* White color for header */
            margin-bottom: 1.5rem;
        }

        p {
            font-size: 18px;
            color: #d9e8ff; /* Lighter shade of white for paragraph */
            margin-bottom: 2rem;
        }

        .btn {
            background-color: #fff; /* White button */
            color: #007bff; /* Blue text color */
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #d9e8ff; /* Light blue background on hover */
            }

        .back-link {
            display: block;
            margin-top: 1rem;
            font-size: 14px;
            color: #d9e8ff;
            text-decoration: none;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <h1>Forgot Password Confirmation</h1>
        <p>
            The link has been sent, please check your email to reset your password.
        </p>
        
    </div>
</body>
</html>

