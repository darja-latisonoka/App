@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <style>
        body {
            background-color: #e6f2ff; /* Light blue background */
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container-sm {
            background-color: #ffffff; /* White background for the form container */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
            max-width: 400px;
            width: 100%;
        }

        .text-center {
            color: #0056b3; /* Dark blue for the heading */
            margin-bottom: 20px;
        }

        .form-group label {
            color: #003366; /* Deep blue for labels */
            font-weight: bold;
            margin-bottom: 5px;
            display: inline-block;
        }

        .form-control {
            border: 1px solid #007bff; /* Blue border for input fields */
            border-radius: 4px;
            padding: 10px;
            width: 100%;
            font-size: 16px;
            margin-bottom: 10px;
        }

            .form-control:focus {
                border-color: #0056b3; /* Darker blue border on focus */
                box-shadow: 0 0 5px rgba(0, 91, 179, 0.5); /* Blue glow effect */
                outline: none;
            }

        .btn-primary {
            background-color: #007bff; /* Blue background for the button */
            border-color: #007bff;
            color: #ffffff;
            padding: 10px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

        .text-danger {
            color: #dc3545; /* Red color for validation errors */
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>
  
    <main class="container-sm">
        <h2 class="text-center">Join ChatDuck Family</h2>

        <form asp-action="Register" class="d-flex flex-column gap-2">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <small class="text-muted">Allow letters and numbers in the username and try to choose a unique name for yourself.</small>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <small class="text-muted">Password must contain a number, a lowercase letter, a capital letter, a special character, and must be at least 6 characters long.</small>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
            <a href="@Url.Action("Index", "Home")" class="btn start-btn">Back</a>
            <a href="@Url.Action("Login", "Auth")">Already have an account?</a>
        </form>
    </main>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}